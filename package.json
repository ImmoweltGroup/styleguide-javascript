{
  "name": "@immowelt/styleguide-javascript",
  "version": "0.0.0-development",
  "private": false,
  "author": "Immonet dev team <aegaeon@immonet.de> (https://immonet.de)",
  "license": "MIT",
  "description": "Styleguide related configuration files for javascript related projects.",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run lint && npm run jest:coverage",
    "lint": "eslint src || true",
    "prettier": "prettier src/**/*.js",
    "jest": "jest",
    "jest:watch": "npm run jest -- --watch",
    "jest:coverage": "npm run jest -- --coverage",
    "postinstall": "node src/postinstall.js",
    "preuninstall": "node src/preuninstall.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.2.0",
    "npm": ">=5.3.0"
  },
  "devDependencies": {
    "@immowelt/eslint-config-immowelt-react": "^1.0.0",
    "@immowelt/jest-preset-node": "^1.0.0",
    "eslint": "4.5.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.1.1",
    "mock-fs": "^4.4.1",
    "prettier": "^1.6.1",
    "sinon": "^3.2.1"
  },
  "jest": {
    "preset": "@immowelt/jest-preset-node"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ImmoweltGroup/styleguide-javascript.git"
  },
  "dependencies": {
    "symlink-or-copy": "^1.1.8"
  }
}
